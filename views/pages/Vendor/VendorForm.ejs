<%- include("../../partials/header") %>

<div class="row">
    <div class="col-12 col-md-8 col-lg-8">
        <div class="card">
            <form id="vendorDetailsForm" method="post" data-form-valid="saveVendorDetails">
            <div class="card-header">
                <h4>Vendor Details</h4>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control"
                           data-valid="required" data-msg="Please enter name"
                           name="name" id="name">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Mobile Number</label>
                        <input type="text" class="form-control"
                               data-valid="required" data-msg="Please enter Mobile Number"
                               name="mobile" id="mobile">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Email</label>
                        <input type="text" class="form-control"
                               data-valid="required" data-msg="Please enter Email"
                               name="email" id="email">
                    </div>
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <textarea id="address" name="address" class="form-control" cols="5"
                              data-valid="required" data-msg="Please enter Address"></textarea>
                </div>

                <div class="form-group">
                    <label>Shop Name</label>
                    <input type="text" class="form-control"
                           data-valid="required" data-msg="Please enter shop name"
                           name="shop_name" id="shop_name">
                </div>
                <div class="form-group">
                    <label>Shop Image</label>
                    <div id="shop-image-preview" class="image-preview">
                        <label for="shop-image" id="shop-image-label">Choose File</label>
                        <input type="file" name="shopImage" id="shop-image" data-valid="required"
                               data-msg="Please select shop image" data-error="#error-shop-image">
                    </div>
                    <div id="error-shop-image"></div>
                </div>
                <div class="form-group">
                    <label class="form-label">Status</label>
                    <div class="selectgroup selectgroup-pills">
                        <label class="selectgroup-item">
                            <input type="radio" name="status" value="1" class="selectgroup-input" checked="">
                            <span class="selectgroup-button selectgroup-button-icon"><i class="fas fa-sun"></i></span>
                        </label>
                        Active
                        <label class="selectgroup- pl-2">
                            <input type="radio" name="status" value="2" class="selectgroup-input">
                            <span class="selectgroup-button selectgroup-button-icon"><i class="fas fa-moon"></i></span>
                        </label>
                        Inactive
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
            </form>
        </div>
    </div>
</div>


<%- include("../../partials/footer") %>

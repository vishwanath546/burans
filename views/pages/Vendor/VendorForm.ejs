<%- include("../../partials/header") %>

<div class="row">
    <form id="vendorDetailsForm" method="post" class="form-row" data-form-valid="saveVendorDetails">
        <div class="col-12 col-md-6 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h4>Vendor Details</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="hidden" name="updateVendorId" id="updateVendorId"
                               value="<%= vendorId %>"/>
                        <input type="text" class="form-control"
                               data-valid="required" data-msg="Please enter name"
                               name="name" id="name">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Mobile Number</label>
                            <input type="text" class="form-control"
                                   data-valid="required" data-msg="Please enter Mobile Number"
                                   name="mobileNumber" id="mobileNumber">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Email</label>
                            <input type="text" class="form-control"
                                   data-valid="required" data-msg="Please enter Email"
                                   name="email" id="email">
                        </div>
                    </div>
                    <div class="d-flex flex-column form-group" id="subcategorySelectionBox">
                        <label>Areas</label>
                        <select id="area" name="area" multiple
                                 data-valid="required" data-msg="Please select areas">
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Status</label>
                        <div class="selectgroup selectgroup-pills">
                            <label class="selectgroup-item">
                                <input type="radio" name="status" value="1" class="selectgroup-input" checked="">
                                <span class="selectgroup-button selectgroup-button-icon"><i
                                            class="fas fa-sun"></i></span>
                            </label>
                            Active
                            <label class="selectgroup- pl-2">
                                <input type="radio" name="status" value="2" class="selectgroup-input">
                                <span class="selectgroup-button selectgroup-button-icon"><i
                                            class="fas fa-moon"></i></span>
                            </label>
                            Inactive
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Shop Details</h4>
                </div>
                <div class="card-body">
                                      <div class="form-group">
                        <label>Shop Name</label>
                        <input type="text" class="form-control"
                               data-valid="required" data-msg="Please enter shop name"
                               name="shopName" id="shopName">
                    </div>
                    <div class="form-group">
                        <label>Shop Image</label>
                        <div id="shop-image-preview" class="image-preview">
                            <label for="shop-image" id="shop-image-label">Choose File</label>
                            <input type="file" name="shopImage" id="shop-image" data-valid="required"
                                   data-msg="Please select shop image" data-error="#error-shop-image">
                        </div>
                        <div id="error-shop-image"></div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Gst Number</label>
                            <input type="text" class="form-control"
                                   name="gstNumber" id="gstNumber">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Food License</label>
                            <input type="text" class="form-control"
                                   name="foodLicense" id="foodLicense">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <textarea id="address" name="address" class="form-control form-control-sm" cols="5"
                                  data-valid="required" data-msg="Please enter Address"></textarea>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </div>
    </form>
</div>


<%- include("../../partials/footer") %>

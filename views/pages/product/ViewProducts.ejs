<%- include("../../partials/header") %>

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h4><%= title%></h4>
            <div class="card-header-action d-flex ">
                <form class="px-2">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search">
                        <div class="input-group-btn">
                            <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </form>
                <a class="btn btn-primary" href="/create-product"><i class="fas fa-plus"></i></a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped" id="productTables" style="width:100%">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Subcategory</th>
                        <th>Price</th>
                        <th>Sale Price</th>
                        <th>Price Quantity</th>
                        <th>Sp.Delivery charges</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>
</div>

<%- include("../../partials/footer") %>
